# AWS Configuration
aws_region = "ap-northeast-1"

# Project Configuration
project_name = "my-saas-app"

# Application Configuration
app_image = "your-account.dkr.ecr.ap-northeast-1.amazonaws.com/my-app:staging"

# SSL Certificate (optional for staging)
# certificate_arn = "arn:aws:acm:ap-northeast-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# Database Configuration
db_name     = "appdb"
db_username = "admin"
db_password = "staging-password-change-me"
multi_az   = false

# AWS Account Configuration
aws_account_id = "123456789012"

# CodePipeline Source Configuration
source_bucket_name = "my-app-source-bucket"
source_object_key  = "source.zip"

# WAF IP Whitelist (optional)
ip_whitelist_enabled = false
whitelist_ips = [
  # "203.0.113.0/24",
  # "198.51.100.0/24"
]